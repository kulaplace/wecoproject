<h1>Leads</h1>

<table border>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Company</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Status</th>
      <th>Lead</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= image_tag avatar_url(lead), size: "50x50" %></td>
        <td><%= lead.name %></td>
        <td><%= lead.company %></td>
        <td><%= lead.address %></td>
        <td><%= lead.email %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.status %></td>
        <td><%= lead.lead_id %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lead', new_lead_path %>
